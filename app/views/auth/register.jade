extends ../layouts/main

append stylesheets

append javascripts

block content
    .site-wrapper
        .site-wrapper-inner
            .cover-container
                .masthead.clearfix
                    .inner
                        h3.masthead-brand Register
                        nav
                            ul.nav.masthead-nav
                                li.active
                                    a(href='login') Login

                .inner.cover
                    include ../includes/messages

                    - var user = user || {};
                    form.form.col-md-12.center-block(method='post')
                        .form-group
                            input.form-control.input-lg(type='text' placeholder='Name' name='name' required value='#{user.name || ""}')
                        .form-group
                            input.form-control.input-lg(type='text' placeholder='Last Name' name='last_name' required value='#{user.last_name || ""}')
                        .form-group
                            input.form-control.input-lg(type='text' placeholder='User Name' name='user_name' required value='#{user.user_name || ""}')
                        .form-group
                            input.form-control.input-lg(type='password' placeholder='Password' name='password' required value='#{user.password || ""}')
                        .form-group
                            button.btn.btn-success.btn-lg.btn-block Register

                .mastfoot
                    .inner
                        include ../includes/footer