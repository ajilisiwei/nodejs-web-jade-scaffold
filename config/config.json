{
    "DATABASE": {
        "RECONNECT": true,
        "RECONNECTION_INTERVAL": 5000
    },
    "HTTP_LOG_CONFIG": "dev",
    "LOCALES": [
        "en",
        "pt",
        "pt-br"
    ],
    "AUTH": {
        "ENABLED": true,
        "LOCAL": {
            "ENABLED": true
        },
        "FACEBOOK": {
            "ENABLED": true,
            "PROFILE_FIELDS": [
                "id",
                "first_name",
                "last_name",
                "email",
                "picture",
                "about",
                "bio"
            ],
            "OPTIONS": {
                "display": "touch",
                "scope": [
                    "public_profile",
                    "user_about_me",
                    "email"
                ],
                "authorizationURL": "https://www.facebook.com/v2.5/dialog/oauth",
                "profileURL": "https://graph.facebook.com/v2.5/me"
            }
        },
        "TWITTER": {
            "ENABLED": true
        },
        "GOOGLE": {
            "ENABLED": true,
            "OPTIONS": {
                "scope": [
                    "https://www.googleapis.com/auth/userinfo.profile",
                    "https://www.googleapis.com/auth/userinfo.email"
                ]
            }
        },
        "GITHUB": {
            "ENABLED": true
        }
    }
}